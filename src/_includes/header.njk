            <div class="bg-white lg:my-16 rounded-lg shadow-sm col-span-5 lg:col-span-2">
                <div class="flex flex-col items-start justify-start w-full p-10 lg:p-16 xl:p-24">
                    <h4 class="w-full text-3xl font-bold">Faça uma simulação</h4>
                    <form x-data="simulationForm" @submit.prevent="sendToSimulation" class="w-full mb-0 mt-8 space-y-4">
                        <input
                            type="hidden"
                            name="agency"
                            id="agency"
                            value="734672277"
                            required>

                        <div>
                            <label for="zip" class="block text-gray-700 font-bold mb-2">CEP</label>
                            <input
                                type="text"
                                name="zip"
                                id="zip"
                                placeholder="Digite seu CEP"
                                class="w-full rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm"
                                x-mask="99999-999"
                                x-model="zipCode"
                                x-on:change.debounce.100ms="zipCode.length === 9 && fetchPowerDistributors()"
                                required>
                        </div>
                        <div>
                            <label for="energy-consumption" class="block text-gray-700 font-bold mb-2">Média mensal da conta de energia</label>
                            <div class="flex w-full px-4 py-3 border border-gray-200 rounded-lg shadow-sm">
                                <span class="flex select-none items-center px-3">R$</span>
                                <input
                                    type="number"
                                    step="0.01"
                                    min="0.00"
                                    max="1000000.00"
                                    name="energy-consumption"
                                    id="energy-consumption"
                                    placeholder="0,00"
                                    class="block flex-1 border-0 bg-transparent py-0 pl-1 placeholder:text-gray-400 focus:ring-0"
                                    x-model="energyConsumption"
                                    required>
                            </div>
                        </div>

                        <div>
                            <label for="name" class="block text-gray-700 font-bold mb-">Concessionária</label>
                        
                            <select class="w-full rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm"
                                x-model="powerDistributorId"
                                x-bind:disabled="loading || powerDistributors.length === 0"
                                required>
                                <option value="" selected disabled>Selecione...</option>
                                <template x-for="powerDistributor in powerDistributors" :key="powerDistributor.id">
                                    <option x-text="powerDistributor.name" :value="powerDistributor.id"></option>
                                </template>
                            </select>
                        </div>
                        <button
                            x-init="buttonText = defaultButtonText = 'Enviar'"
                            type="submit"
                            :disabled="loading"
                            class="w-full rounded-lg bg-jaffa-400 px-5 py-3 text-sm font-medium text-white">
                            <span x-text="buttonText">Enviar</span>
                        </button>
                    </form>
